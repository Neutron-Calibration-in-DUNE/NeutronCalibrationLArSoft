# "largest", or "mixed".
physics.analyzers.ana.FillRecoVoxels:           true
physics.analyzers.ana.RecoEdepPDGLabels:        [0, 1]
physics.analyzers.ana.RecoVoxelSize:            4.7
physics.analyzers.ana.RecoVoxelLabeling:        "largest"