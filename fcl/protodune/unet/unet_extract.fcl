physics.analyzers.ana.MCVoxelBoundingBox:     "TPC"
physics.analyzers.ana.MCVoxelLabeling:        "largest"

# Reco energy deposit parameters
physics.analyzers.ana.FillRecoEnergyDeposits: true

# MC Voxelizer parameters
